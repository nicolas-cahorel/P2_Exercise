<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="16dp">


    <!-- AFFICHAGE DES ANIMAUX SUR L'ECRAN D'ACCEUIL-->

    <!-- Affichage de l'avatar de l'animal -->
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        tools:src="@drawable/img_dog" />
    <!--android:src.Compat="@{viewModel.selectedBreed.getCover()}"-->

    <!-- Affichage du nom et caractÃ©ristques de l'animal -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Rantanplan" />

        <TextView
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Chien de 8 ans ! Son poids est de 28.1 Kg et il mesure 38.4 cm." />

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>